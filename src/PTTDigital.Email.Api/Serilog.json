{
  "Serilog": {
    "LevelSwitches": { "$controlSwitch": "Debug" },
    "Properties": {
      "Application": "Email API"
    },
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "System": "Information",
        "Microsoft": "Information",
        "Microsoft.AspNetCore": "Information",
        "Microsoft.EntityFrameworkCore": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "Microsoft.Extensions.Diagnostics": "Information",
        "PTTDigital": "Debug"
      },
      "ControlledBy": "$controlSwitch"
    },
    "Using": [ "Serilog.Sinks.Console" ],
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "configure": [
            { "Name": "Console" }
          ],
          "theme": "Serilog.Sinks.SystemConsole.Themes.AnsiConsoleTheme::Code, Serilog.Sinks.Console",
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff} [{Level:u3}]-[{IPAddress}]-[{EventId}]-[{SourceContext}] {Message:l}{NewLine}{Exception}"
        }
      }
    ]
  }
}
